<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_recyclerView"
        style="@style/activity_RecyclerView">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_NoElements"
        style="@style/No_Elements"
        android:text="@string/no_elements"
        android:textSize="@dimen/text_size_noElements"
        app:layout_constraintTop_toTopOf="@+id/rc_recyclerView" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fb_New"
        style="@style/fb_button"
        android:clickable="true"
        android:onClick="onClickNew"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>